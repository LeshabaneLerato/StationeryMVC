@model StationeryMVC.Models.StationeryItem

<h2 class="mb-4">🗑️ Delete Stationery Item</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this item: <strong>@Model.Name</strong>?
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div class="mb-3">
        <img src="@Model.ImageUrl" alt="@Model.Name" style="height:150px; object-fit:cover;" />
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
